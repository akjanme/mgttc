@model ITI.Models.AdmissionCriteriaModel
@{
    ViewBag.Title = "AdmissionCriteria";
}

    <div class="container">
        <br />
        <b>ADMISSIONs (only for the trade (s) already affiliated to NCVT</b>

        (No admission is allowed in any NCVT trade before affiliation is granted by Sub-Committee of NCVT)

        <table cellpadding="10" class="table table-bordered">
            <tbody>
                <tr>
                    <td valign="top">
                        1.
                    </td>
                    <td colspan="3" valign="top">
                        Date of starting the session
                    </td>
                    <td valign="top">
                        @Model.SessionStartDate
                    </td>
                </tr>

                <tr>
                    <td valign="top">
                        2.
                    </td>
                    <td colspan="3" valign="top">
                        Date of issue of notice calling for the application (attach notice or paper advertisement, pamphlets…… etc)
                    </td>
                    <td valign="top">
                        @Model.DateOfNotice
                    </td>
                </tr>

                <tr>
                    <td valign="top">
                        3.
                    </td>
                    <td colspan="3" valign="top">
                        Last date for receipt of application fixed as per the notice
                    </td>
                    <td valign="top">
                        @Model.LastDateOfReciept
                    </td>
                </tr>

                <tr>
                    <td valign="top">
                        4.
                    </td>
                    <td colspan="3" valign="top">
                        No. of applications received
                    </td>
                    <td valign="top">
                        @Model.NumberOfApplication
                    </td>
                </tr>

                <tr>
                    <td valign="top">
                        5.
                    </td>
                    <td colspan="3" valign="top">
                        Date by which the admissions were completed and classes started
                    </td>
                    <td valign="top">
                        @Model.DateOfAdmissionCompleted
                    </td>
                </tr>
                <tr>
                    <td valign="top">
                        7.
                    </td>
                    <td colspan="3" valign="top">
                        Criteria for admission of trainees
                    </td>
                    <td valign="top">
                        @Model.CriteriaForAddmision
                    </td>
                </tr>

                <tr>
                    <td valign="top">
                        8.
                    </td>
                    <td colspan="3" valign="top">
                        Whether the trainees admitted, fulfill the prescribed Qualification and age
                    </td>
                    <td valign="top">
                        @Model.IsTraineeQualified
                    </td>
                </tr>

                <tr>
                    <td valign="top">
                        9.
                    </td>
                    <td colspan="3" valign="top">
                        Copy of the prospectus should be enclosed
                    </td>
                    <td valign="top">
                        @Model.IsCopyEnclosed
                    </td>
                </tr>

                <tr>
                    <td valign="top">
                        10.
                    </td>
                    <td colspan="3" valign="top">
                        CCE (continuous and comprehensive evaluation) Available on internet and evidence retained
                    </td>
                    <td valign="top">
                        @Model.CCE
                    </td>
                </tr>
            </tbody>
        </table>
        <br />
        <br />

    </div>