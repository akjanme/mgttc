@model IEnumerable<ITI.Models.ImageModel>
<div class="container">
    <div class="lightboxgallery-gallery clearfix">
        @foreach (var res in Model)
        {
            <a class="lightboxgallery-gallery-item" target="_blank" href="@res.ImageUrl" data-desc="@res.ImagDesc">
                <div>
                    <img src="@res.ImageUrl" title="@res.ImagDesc" alt="@res.ImagDesc">
                    <div class="lightboxgallery-gallery-item-content">
                        <span class="lightboxgallery-gallery-item-title">@res.ImagDesc</span>
                    </div>
                </div>
            </a>
        }
    </div>
</div>
@section scripts{
    @Scripts.Render("~/bundles/gallery");
    <script>
        jQuery(function ($) {
            $(document).on('click', '.lightboxgallery-gallery-item', function (event) {
                event.preventDefault();
                $(this).lightboxgallery({
                    showCounter: true,
                    showTitle: true,
                    showDescription: true
                });
            });
        });
    </script>
}


