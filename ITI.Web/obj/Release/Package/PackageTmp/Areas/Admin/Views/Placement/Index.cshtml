@model IEnumerable<ITI.Models.PlacementTableModel>
<div class="content">
    <div class="col-xs-12">
        <div class="row">
            <div class="row text-right">
                <div class="col-lg-11">

                </div>
                <div class="col-lg-1">
                    <a href="/admin/Placement/create" class="btn btn-block btn-primary btn-lg">Create</a>
                </div>
            </div>
            <div class="box">
                <div class="box-body">

                    <div class="row">
                        <table class="table table-bordered">
                            <tr>
                                <th>Name</th>
                                <th>Trade</th>
                                <th>SalaryOnJoin</th>
                                <th></th>
                                <th></th>
                            </tr>

                            @foreach (var placement in Model)
                            {
                                <tr>
                                    <td>@placement.Name  </td>
                                    <td>@placement.Trade</td>
                                    <td>@placement.SalaryOnJoin</td>
                                    <td><a href="/admin/Placement/create?id=@placement.ID" class="update btn btn-warning btn-sm"><span class="glyphicon glyphicon-pencil"></span></a></td>
                                    <td><a href="/admin/Placement/delete?id=@placement.ID" class="update btn btn-warning btn-sm"><span class="glyphicon glyphicon-trash"></span></a></td>

                                </tr>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

