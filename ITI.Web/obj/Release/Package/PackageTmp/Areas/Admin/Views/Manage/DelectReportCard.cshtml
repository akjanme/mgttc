@model ITI.Dto.StudentModel
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 box box-info">
        <div class="col-md-6">
            <!-- Horizontal Form -->
            <div class="box-header with-border">
                <h3 class="box-title">New Student</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            @using (Html.BeginForm("student", "student", FormMethod.Post, new { @class = "form-horizontal" }))
            {
            <div class="box-body">
                <div class="form-group">
                    @*@Html.LabelFor(x=>x.Name, "Student Name",new { @class= "col-sm-2 control-label" })*@
                    <div class="form-group">
                        <label for="Trade" class="col-sm-4 control-label">Select Trade</label>
                        <div class="col-sm-8">
                            @Html.DropDownListFor(m => m.Trade, new SelectList(ViewBag.Trade, "Value", "Text"), new { @class = "form-control" })

                        </div>
                    </div>
                    <div class="form-group">
                        <label for="Unit" class="col-sm-4 control-label">Select Unit</label>
                        <div class="col-sm-8">
                            @Html.DropDownListFor(m => m.Unit, new SelectList(ViewBag.Unit, "Value", "Text"), new { @class = "form-control" })
                        </div>
                    </div>

                </div>
                <div class="form-group">
                    <label for="Session" class="col-sm-4 control-label">Select Year</label>
                    <div class="col-sm-8">
                        @Html.DropDownListFor(m => m.Session, new SelectList(ViewBag.Session, "Value", "Text"), new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                <label for="Category" class="col-sm-4 control-label">Select Month</label>
                <div class="col-sm-8">
                    @Html.DropDownListFor(m => m.Category, new SelectList(ViewBag.Category, "Value", "Text"), new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="Category" class="col-sm-4 control-label">Month's Test</label>
                    <div class="col-sm-8">
                        @Html.DropDownListFor(m => m.Category, new SelectList(ViewBag.Category, "Value", "Text"), new { @class = "form-control" })

                    </div>
                </div>
                <!-- /.box-body -->
                <div class="box-footer">
                    <button type="submit" class="btn btn-info pull-right">Search</button>
                </div>
            </div>
                <!-- /.box-footer -->
            }
        </div>
        <!-- /.box -->
        <div class="col-md-6">

        </div>
    </div>
</div>
