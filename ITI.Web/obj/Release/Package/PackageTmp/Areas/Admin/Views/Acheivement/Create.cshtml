@model ITI.Models.AcheivementModel
<div class="container">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 box box-info">
            <div class="col-md-6">
                <!-- Horizontal Form -->
                <div class="box-header with-border">
                    <h3 class="box-title col-lg-12 col-md-12 col-sm-12">Certificate</h3>
                </div>

                @using (Html.BeginForm("Create", "Acheivement", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <label for="totalpassout" class="col-sm-4 control-label">Name Of Award</label>
                        <div class="col-sm-8 col-lg-8 col-md-8">
                            @Html.TextBoxFor(x => x.NameofAward, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.NameofAward, "", new { @class = "text-danger" })
                        </div>

                    </div>
                    <div class="form-group">
                        <label for="ntc_issued" class="col-sm-4 control-label">Scheme Name</label>
                        <div class="col-sm-8">
                            @Html.TextBoxFor(x => x.SchemeName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.SchemeName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="tobeissued" class="col-sm-4 control-label">Won By</label>
                        <div class="col-sm-8">
                            @Html.TextBoxFor(x => x.WonBy, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.WonBy, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="tobeissued" class="col-sm-4 control-label">Year</label>
                        <div class="col-sm-8">
                            @Html.TextBoxFor(x => x.Year, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.Year, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="tobeissued" class="col-sm-4 control-label">Remark</label>
                        <div class="col-sm-8">
                            @Html.TextBoxFor(x => x.Remarks, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.Remarks, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="box-footer fa-align-right">
                        <div class="box-footer">
                            @Html.HiddenFor(x => x.ID)
                            <a href="/admin/acheivement/index" class="btn btn-default">Back To List</a>
                            <button type="submit" class="btn btn-info pull-right">Save</button>
                        </div>
                    </div>

                }
            </div>
            <div class="col-md-6">

            </div>

        </div>
    </div>
</div>
