@model ITI.Models.StudentModel
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 box box-info">
        <div class="col-md-6">
            <!-- Horizontal Form -->
            <div class="box-header with-border">
                <h3 class="box-title">New Student</h3>
            </div>
            <div class="row">
                @if (ViewBag.Error != null)
                {
                    <div class="error-content">
                        @ViewBag.Error
                    </div>
                }
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            @using (Html.BeginForm("Create", "Student", FormMethod.Post, new { @class = "form-horizontal", name = "studentform" }))
            {
            <div class="box-body">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @*@Html.LabelFor(x=>x.Name, "Student Name",new { @class= "col-sm-2 control-label" })*@
                    <label for="Name" class="col-sm-4 control-label">Student Name</label>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="FatherName" class="col-sm-4 control-label">Father's Name</label>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(x => x.FatherName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.FatherName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="DateofBirth" class="col-sm-4 control-label">DateofBirth</label>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(x => x.DateofBirth, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.DateofBirth, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="Category" class="col-sm-4 control-label">Category</label>
                    <div class="col-sm-8">
                        @Html.DropDownListFor(m => m.Category, new SelectList(ViewBag.Category, "Value", "Text", Model.Category), new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Category, "", new { @class = "text-danger" }) 
                    </div>
                </div>
                <div class="form-group">
                    <label for="EnrollNo" class="col-sm-4 control-label">Registration Number</label>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(x => x.EnrollNo, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.EnrollNo, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="Trade" class="col-sm-4 control-label">Trade</label>
                    <div class="col-sm-8">
                        @Html.DropDownListFor(m => m.Trade, new SelectList(ViewBag.Trade, "Value", "Text", Model.Trade), new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Trade, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="Unit" class="col-sm-4 control-label">Unit</label>
                    <div class="col-sm-8">
                        @Html.DropDownListFor(m => m.Unit, new SelectList(ViewBag.Unit, "Value", "Text", Model.Unit), new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Unit, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="Session" class="col-sm-4 control-label">Session</label>
                    <div class="col-sm-8">
                        @Html.DropDownListFor(m => m.Session, new SelectList(ViewBag.Session, "Value", "Text", Model.Session), new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Session, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="Qualification" class="col-sm-4 control-label">Qualification</label>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(x => x.Qualification, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Qualification, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
                <!-- /.box-body -->
                <div class="box-footer">
                    @Html.HiddenFor(x => x.ID)
                    <a href="/admin/student/index" class="btn btn-default">Back To List</a>
                    <button type="submit" class="btn btn-info pull-right">Save</button>
                </div>
                <!-- /.box-footer -->
            }
        </div>
        <!-- /.box -->
        <div class="col-md-6">

        </div>
    </div>
</div>