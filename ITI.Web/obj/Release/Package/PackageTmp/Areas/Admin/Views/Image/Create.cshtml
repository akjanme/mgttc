@model ITI.Models.ImageModel
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 box box-info">
        <div class="col-md-6">
            <!-- Horizontal Form -->
            <div class="box-header with-border">
                <h3 class="box-title">Images</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            @using (Html.BeginForm("Create", "Image", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
            {
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="box-body">
                    <div class="form-group">
                        <label for="Name" class="col-sm-4 control-label">Upload Images</label>
                        <div class="col-sm-8">
                            <input type="file" id="imageupload" class="form-control" name="FileName" />
                            @Html.ValidationMessageFor(x => x.ImageUrl, "", new { @class = "text-danger" })
                        </div>
                    </div> 
                    <div class="form-group">
                        <label for="Name" class="col-sm-4 control-label">Images Description</label>
                        <div class="col-sm-8">
                            @Html.TextBoxFor(x=>x.ImagDesc, null, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.ImagDesc, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <!-- /.box-body -->
                <div class="box-footer">
                    @Html.HiddenFor(x => x.ID)
                    <a href="/admin/Image/index" class="btn btn-default">Back To List</a>
                    <button type="submit" class="btn btn-info pull-right">Upload</button>
                </div>
                <!-- /.box-footer -->
            }
        </div>
        <!-- /.box -->
        <div class="col-md-6">

        </div>
    </div>
</div>
