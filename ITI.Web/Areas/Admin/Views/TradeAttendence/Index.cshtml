            <td>
                @Html.DisplayFor(modelItem => item.NT_onRoll_3)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NT_Avail_1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NT_Avail_2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NT_Avail_3)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Av_Att_1)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

</table>
