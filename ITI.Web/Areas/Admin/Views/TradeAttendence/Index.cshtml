                @Html.DisplayFor(modelItem => item.NU_1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NU_2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NU_3)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NT_onRoll_1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NT_onRoll_2)
