@model IEnumerable<ITI.Data.TradeAttendence>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table border="1" cellspacing="0" cellpadding="0" width="100%" class="tableizer-table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Trade)
        </th>
        <th>
            Number of Units 1st shift
        </th>
        <th>
            Number of Units 2nd shift
        </th>
        <th>
            Number of Units 3rd shift
        </th>
        <th>
            No of Trainees on Roll 1st shift
        </th>
        <th>
            No of Trainees on Roll 2nd shift
        </th>
        <th>
            No of Trainees on Roll 3rd shift
