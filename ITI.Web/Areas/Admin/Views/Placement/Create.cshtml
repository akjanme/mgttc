@model ITI.Models.PlacementTableModel
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 box box-info">
        <div class="col-md-6">
            <!-- Horizontal Form -->
            <div class="box-header with-border">
                <h3 class="box-title">Student Placement</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            @using (Html.BeginForm("Create", "Placement", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="box-body">
                    <div class="form-group">
                        <label for="Name" class="col-sm-4 control-label">Name</label>
                        <div class="col-sm-8">
                            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="Name" class="col-sm-4 control-label">Roll Number</label>
                        <div class="col-sm-8">
                            @Html.TextBoxFor(x => x.Roll_No, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.Roll_No, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="Name" class="col-sm-4 control-label">Trade</label>
                        <div class="col-sm-8">
                            @Html.DropDownListFor(m => m.Trade, new SelectList(ViewBag.Trade, "Value", "Text", Model.Trade), new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="Name" class="col-sm-4 control-label">Year Of Passing</label>
                        <div class="col-sm-8">
                            @Html.TextBoxFor(x => x.PassingYear, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.PassingYear, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="Name" class="col-sm-4 control-label">Organization/Company</label>
                        <div class="col-sm-8">
                            @Html.TextBoxFor(x => x.Org_Name, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.Org_Name, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="Name" class="col-sm-4 control-label">Salary on Joining</label>
                        <div class="col-sm-8">
                            @Html.TextBoxFor(x => x.SalaryOnJoin, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.SalaryOnJoin, "", new { @class = "text-danger" })
                        </div>
                    </div>

                </div>
                <!-- /.box-body -->
                <div class="box-footer">
                    @Html.HiddenFor(x => x.ID)
                    <a href="/admin/Placement/index" class="btn btn-default">Back To List</a>
                    <button type="submit" class="btn btn-info pull-right">Submit</button>
                </div>
                <!-- /.box-footer -->
            }
        </div>
        <!-- /.box -->
        <div class="col-md-6">

        </div>
    </div>
</div>

