@model ITI.Models.StudentModel
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 box box-info">
        <div class="col-md-6">
            <!-- Horizontal Form -->
            <div class="box-header with-border">
                <h3 class="box-title">New Student</h3>
            </div>
            <div class="row">
                @if (ViewBag.Error != null)
                {
                    <div class="error-content">
                        @ViewBag.Error
                    </div>
                }
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            @using (Html.BeginForm("StudentCreate", "AStaffStundent", FormMethod.Post, new { @class = "form-horizontal", name = "studentform" }))
            {
        <div class="box-body">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label for="DateofBirth" class="col-sm-4 control-label">Roll Number</label>
                <div class="col-sm-8">
                    @Html.TextBoxFor(x => x.RollNo, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @*@Html.LabelFor(x => x.Sname, "Student Name", new { @class = "col-sm-2 control-label" })*@
                <label for="Name" class="col-sm-4 control-label">Student Name</label>
                <div class="col-sm-8">
                    @Html.TextBoxFor(x => x.Sname, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Sname, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label for="FatherName" class="col-sm-4 control-label">Father's Name</label>
                <div class="col-sm-8">
                    @Html.TextBoxFor(x => x.FatherName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.FatherName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label for="DateofBirth" class="col-sm-4 control-label">Mother's Name</label>
                <div class="col-sm-8">
                    @Html.TextBoxFor(x => x.MotherName, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <label for="DateofBirth" class="col-sm-4 control-label">Gender</label>
                <div class="col-sm-8">
                    @Html.TextBoxFor(x => x.Gender, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <label for="DateofBirth" class="col-sm-4 control-label">Category</label>
                <div class="col-sm-8">
                    @Html.TextBoxFor(x => x.Category, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Category, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label for="DateofBirth" class="col-sm-4 control-label">Sub Category</label>
                <div class="col-sm-8">
                    @Html.TextBoxFor(x => x.SubCategory, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <label for="DateofBirth" class="col-sm-4 control-label">Date Of Birth</label>
                <div class="col-sm-8">
                    @Html.TextBoxFor(x => x.Dob, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <label for="DateofBirth" class="col-sm-4 control-label">Mobile Number</label>
                <div class="col-sm-8">
                    @Html.TextBoxFor(x => x.MobileNo, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <label for="DateofBirth" class="col-sm-4 control-label">Faculty</label>
                <div class="col-sm-8">
                    @Html.TextBoxFor(x => x.Faculty, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <label for="DateofBirth" class="col-sm-4 control-label">Session</label>
                <div class="col-sm-8">
                    @Html.TextBoxFor(x => x.Session, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Session ,"", new { @class="text-danger"})
                </div>
            </div>
        </div>
                <!-- /.box-body -->
                <div class="box-footer">
                    @Html.HiddenFor(x => x.ID)
                    <a href="/Admin/AStaffStundent/StudentList" class="btn btn-default">Back To List</a>
                    <button type="submit" class="btn btn-info pull-right">Save</button>
                </div>
                <!-- /.box-footer -->
            }
        </div>
        <!-- /.box -->
        <div class="col-md-6">

        </div>
    </div>
</div>
