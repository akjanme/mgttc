@model ITI.Models.StudentModel
<div class="row">
    <div class="col-lg-12 col-md-12 col-md-12 box box-info">
        <div class="col-md-6">
            <!-- Horizontal Form -->
            <div class="box-header with-border">
                <h3 class="box-title">New Student</h3>
            </div>
            <div class="row">
                @if (ViewBag.Error != null)
                {
                    <div class="error-content">
                        @ViewBag.Error
                    </div>
                }
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            @using (Html.BeginForm("Create", "Student", FormMethod.Post, new { @class = "form-horizontal", name = "studentform" }))
            {
                <div class="box-body">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <div class="row">
                            @*@Html.LabelFor(x=>x.Name, "Student Name",new { @class= "col-md-2 control-label" })*@
                            <label for="Name" class="col-md-4 control-label">Student Name</label>
                            <div class="col-md-8">
                                @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <label for="FatherName" class="col-md-4 control-label">Father's Name</label>
                            <div class="col-md-8">
                                @Html.TextBoxFor(x => x.FatherName, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.FatherName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <label for="DateofBirth" class="col-md-4 control-label">DateofBirth</label>
                            <div class="col-md-8">
                                @Html.TextBoxFor(x => x.MotherName, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.MotherName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <label for="Category" class="col-md-4 control-label">Category</label>
                            <div class="col-md-8">
                                @Html.DropDownListFor(m => m.Category, new SelectList(ViewBag.Category, "Value", "Text", Model.Category), new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.Category, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <label for="Session" class="col-md-4 control-label">Session</label>
                            <div class="col-md-8">
                                @Html.DropDownListFor(m => m.Session, new SelectList(ViewBag.Session, "Value", "Text", Model.Session), new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.Session, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <label for="Qualification" class="col-md-4 control-label">Qualification</label>
                            <div class="col-md-8">
                                @Html.TextBoxFor(x => x.Qualification, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.Qualification, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <label for="Percentage" class="col-md-4 control-label">Percentage</label>
                            <div class="col-md-8">
                                @Html.TextBoxFor(x => x.Percentage, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.Percentage, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <label for="Ptet_Per" class="col-md-4 control-label">PTET %</label>
                            <div class="col-md-8">
                                @Html.TextBoxFor(x => x.Ptet_Per, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.Ptet_Per, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <label for="Qualification" class="col-md-4 control-label">Admit Date</label>
                            <div class="col-md-8">
                                @Html.TextBoxFor(x => x.DateOfAdmit, new { @class = "form-control datepicker" })
                                @Html.ValidationMessageFor(x => x.DateOfAdmit, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.box-body -->
                <div class="box-footer">
                    @Html.HiddenFor(x => x.ID)
                    <a href="/admin/student/index" class="btn btn-default">Back To List</a>
                    <button type="submit" class="btn btn-info pull-right">Save</button>
                </div>
                <!-- /.box-footer -->
            }
        </div>
        <!-- /.box -->
        <div class="col-md-6">

        </div>
    </div>
</div>
@section scripts
{
    <script type="text/javascript">
                $('.datepicker').datepicker(); //Initialise any date pickers
    </script>
}
