@model IEnumerable<ITI.Models.StudentModel>
<div class="content">
    <div class="col-xs-12">
        <div class="row">
            <div class="row text-right">
                <div class="col-lg-11">

                </div>
                <div class="col-lg-1"> 
                    <a href="/admin/student/create" class="btn btn-block btn-primary btn-lg">Create</a>
                </div>
            </div>
            <div class="box">
                <div class="box-body">

                    <div class="row">
                        <table class="table table-bordered">
                            <tr>
                                <th>Name</th>
                                <th>Father Name</th>
                                <th>Date of Birth</th>
                                <th></th>
                                <th></th>
                            </tr>

                            @foreach (var student in Model){
                            <tr>
                                <td>@student.Name</td>
                                <td>@student.FatherName</td>
                                <td>@student.DateofBirth</td>
                                <td><a href="/admin/student/create?id=@student.ID" class="update btn btn-warning btn-sm"><span class="glyphicon glyphicon-pencil"></span></a></td>
                                <td><a href="/admin/student/delete?id=@student.ID" class="update btn btn-warning btn-sm"><span class="glyphicon glyphicon-trash"></span></a></td>

                            </tr>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>