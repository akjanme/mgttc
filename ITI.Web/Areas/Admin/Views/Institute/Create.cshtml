
@{
    ViewBag.Title = "Create";
}

@model ITI.Models.InstituteDetailModel
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 box box-info">
        <div class="col-md-6">
            <!-- Horizontal Form -->
            <div class="box-header with-border">
                <h3 class="box-title">Add Institute Details</h3>
            </div>
            <div class="row">
                @if (ViewBag.Error != null)
                {
                    <div class="error-content">
                        @ViewBag.Error
                    </div>
                }
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            @using (Html.BeginForm("Create", "Institute", FormMethod.Post, new { @class = "form-horizontal",enctype = "multipart/form-data"  }))
            {
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="box-body">
                    <div class="form-group">
                        <label for="Name" class="col-sm-4 control-label">Name Of The Society/ Trust / Company		</label>
                        <div class="col-sm-8">
                            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="Name" class="col-sm-4 control-label">Registration Number and its Validity	</label>
                        <div class="col-sm-8">
                            @Html.TextBoxFor(x => x.RegNo, new { @class = "form-control" })  
                            @Html.ValidationMessageFor(x => x.RegNo, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="Name" class="col-sm-4 control-label">Photo</label>
                        <div class="col-sm-8">
                            <input type="file" id="PhotoName" class="form-control" name="PhotoName" />
                            @Html.ValidationMessageFor(x => x.PhotoName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <!-- /.box-body -->
                <div class="box-footer">
                    @Html.HiddenFor(x => x.ID) 
                    <button type="submit" class="btn btn-info pull-right">Save Info</button>
                </div>
                <!-- /.box-footer -->
            }
        </div>

        <!-- /.box -->
        <div class="col-md-6">

        </div>

    </div>
</div>

