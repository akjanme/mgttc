@model ITI.Models.VisitorModel
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 box box-info">
        <div class="col-md-6">
            <!-- Horizontal Form -->
            <div class="box-header with-border">
                <h3 class="box-title"><b>Visitor</b></h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            @using (Html.BeginForm("Create", "Visitor", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="box-body">
                    <div class="form-group">
                        <label for="Name" class="col-sm-4 control-label">Name</label>
                        <div class="col-sm-8">
                            @Html.TextBoxFor(x => x.vName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.vName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="Name" class="col-sm-4 control-label">Comment</label>
                        <div class="col-sm-8">
                            @Html.TextBoxFor(x => x.Comment, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.Comment, "", new { @class = "text-danger" })
                        </div>
                    </div>

                </div>
                <!-- /.box-body -->
                <div class="box-footer">
                    @Html.HiddenFor(x => x.ID)
                    <a href="/admin/Visitor/index" class="btn btn-default">Back To List</a>
                    <button type="submit" class="btn btn-info pull-right">Submit</button>
                </div>
                <!-- /.box-footer -->
            }
        </div>
        <!-- /.box -->
        <div class="col-md-6">

        </div>
    </div>
</div>



