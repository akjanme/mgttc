@model IEnumerable<ITI.Models.VisitorModel>
<div class="content">
    <div class="col-xs-12">
        <div class="row">
            <div class="row text-right">
                <div class="col-lg-11">

                </div>
                <div class="col-lg-1">
                    <a href="/admin/Visitor/create" class="btn btn-block btn-primary btn-lg">Create</a>
                </div>
            </div>
            <div class="box">
                <div class="box-body">

                    <div class="row">
                        <table class="table table-bordered">
                            <tr>
                                <th>Vname</th>
                                <th>Comment</th>
                                <th></th>
                                <th></th>
                            </tr>

                            @foreach (var visitor in Model)
                            {
                                <tr>
                                    <td>@visitor.vName  </td>
                                    <td>@visitor.Comment</td>
                                    <td><a href="/admin/Visitor/create?id=@visitor.ID" class="update btn btn-warning btn-sm"><span class="glyphicon glyphicon-pencil"></span></a></td>
                                    <td><a href="/admin/Visitor/delete?id=@visitor.ID" class="update btn btn-warning btn-sm"><span class="glyphicon glyphicon-trash"></span></a></td>

                                </tr>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>