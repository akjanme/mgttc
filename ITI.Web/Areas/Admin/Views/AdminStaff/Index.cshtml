@model IEnumerable<ITI.Models.StaffModel>
<div class="content">
    <div class="col-xs-12">
        <div class="row">
            <div class="col-md-12 text-right">
                <div class="col-md-11">

                </div>
                <div class="col-md-1">
                    <a href="/admin/adminStaff/AddStaff" class="btn btn-primary btn-lg">Create</a>
                </div>
            </div>
            <div class="box">
                <div class="box-body"> 
                    <div class="row">
                        <table class="table table-bordered">
                            <tr>
                                <th>Name</th>
                                <th>Designation</th>
                                <th>Photo</th>
                                <th>Edit</th>
                                <th>Delete</th>
                            </tr>

                            @foreach (var Tech in Model)
                            { 
                                    <tr>
                                        <td> @Tech.Name</td>
                                        <td>@Tech.Designation</td>
                                        <td>
                                            <img src="~/images/staff/@Tech.PhotoGraph"
                                                 alt="" width="70"/> 
                                        </td>
                                        <td><a href="/admin/adminStaff/AddStaff?id=@Tech.ID" class="update btn btn-sm"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a></td>
                                        <td><a href="/admin/adminStaff/Delete?id=@Tech.ID" class="update btn btn-sm"><i class="fa fa-trash" aria-hidden="true"></i></a></td>
                                    </tr> 
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

