@model IEnumerable<ITI.Models.StaffModel>
<div class="content">
    <div class="col-xs-12">
        <div class="row">
            <div class="row text-right">
                <div class="col-lg-11">

                </div>
                <div class="col-lg-1">
                    <a href="/admin/AdminStaff/AddStaff" class="btn btn-primary btn-lg">Create</a>
                </div>
            </div>
            <div class="box">
                <div class="box-body">

                    <div class="row">
                        <table class="table table-bordered">
                            <tr>
                                <th>Name</th>
                                <th>Designation</th>
                                <th>Qualification</th>
                                <th></th>
                                <th></th>
                            </tr>

                            @foreach (var Tech in Model)
                            {
                                if (Tech.Staff == "Technical")
                                {
                                    <tr>
                                        <td>@Tech.Name</td>
                                        <td>@Tech.Designation</td>
                                        <td>@Tech.Qualification</td>
                                        <td><a href="/admin/AdminStaff/AddStaff?id=@Tech.ID" class="update btn btn-warning btn-sm"><span class="glyphicon glyphicon-pencil"></span></a></td>
                                        <td><a href="/admin/AdminStaff/Delete?id=@Tech.ID" class="update btn btn-warning btn-sm"><span class="glyphicon glyphicon-trash"></span></a></td>
                                    </tr>
                                }
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

