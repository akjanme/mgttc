@model ITI.Models.TraineeModel
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 box box-info">
        <div class="col-md-6">
            <!-- Horizontal Form -->
            <div class="box-header with-border">
                <h2 class="box-title">Trainee</h2>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            @using (Html.BeginForm("TraineeCreate", "TraineeResult", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="box-body">
                <div class="form-group">
                    <label for="Name" class="col-sm-4 control-label">Trade</label>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(x => x.Trade, new { @class = "form-control", @style = " width: 500px;" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="Name" class="col-sm-4 control-label">Unit First</label>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(x => x.UnitFirst, new { @class = "form-control", @style = " width: 500px;", @cols = 30, @rows = 3 })
                    </div>
                </div>
                <div class="form-group">
                    <label for="Name" class="col-sm-4 control-label">Unit Second</label>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(x => x.UnitSecond, new { @class = "form-control", @style = " width: 500px;", @cols = 35, @rows = 5 })
                    </div>
                </div>
                <div class="form-group">
                    <label for="Name" class="col-sm-4 control-label">Unit Third</label>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(x => x.UnitThird, new { @class = "form-control", @style = " width: 500px;", @cols = 35, @rows = 5 })
                    </div>
                </div>
                <div class="form-group">
                    <label for="Name" class="col-sm-4 control-label">Trainee First</label>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(x => x.TraineesFirst, new { @class = "form-control", @style = " width: 500px;", @cols = 30, @rows = 3 })
                    </div>
                </div>
                <div class="form-group">
                    <label for="Name" class="col-sm-4 control-label">Trainee Second</label>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(x => x.TraineesSecond, new { @class = "form-control", @style = " width: 500px;", @cols = 35, @rows = 5 })
                    </div>
                </div>
                <div class="form-group">
                    <label for="Name" class="col-sm-4 control-label">Trainee Third</label>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(x => x.TraineesThird, new { @class = "form-control", @style = " width: 500px;", @cols = 35, @rows = 5 })
                    </div>
                </div>
                <div class="form-group">
                    <label for="Name" class="col-sm-4 control-label">Inspection First</label>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(x => x.InspectionFirst, new { @class = "form-control", @style = " width: 500px;", @cols = 30, @rows = 3 })
                    </div>
                </div>
                <div class="form-group">
                    <label for="Name" class="col-sm-4 control-label">Inspection Second</label>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(x => x.InspectionSecond, new { @class = "form-control", @style = " width: 500px;", @cols = 35, @rows = 5 })
                    </div>
                </div>
                <div class="form-group">
                    <label for="Name" class="col-sm-4 control-label">Inspection Third</label>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(x => x.InspectionThird, new { @class = "form-control", @style = " width: 500px;", @cols = 35, @rows = 5 })
                    </div>
                </div>
                <div class="form-group">
                    <label for="Name" class="col-sm-4 control-label">Average</label>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(x => x.AverageInspection, new { @class = "form-control", @style = " width: 500px;", @cols = 35, @rows = 5 })
                    </div>
                </div>
            </div>
                <!-- /.box-body -->
                <div class="box-footer">
                    @Html.HiddenFor(x => x.ID)
                    <a href="/Admin/TraineeResult/TraineeView" class="btn btn-default">Back To List</a>
                    <button type="submit" class="btn btn-info pull-right">Save Information</button>
                </div>
                <!-- /.box-footer -->
            }
        </div>
    </div>
    <div class="col-md-6">
    </div>
</div>
