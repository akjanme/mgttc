@model ITI.Models.ResultListModel
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 box box-info">
        <div class="col-md-6">
            <!-- Horizontal Form -->
            <div class="box-header with-border">
                <h3 class="box-title">Result</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
           @using (Html.BeginForm("ResultListCreate", "TraineeResult", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="box-body">
                <div class="form-group">
                    <label for="Name" class="col-sm-4 control-label">Certificates</label>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(x => x.Certificates, new { @class = "form-control datePicker", @type = "date" })
                        @Html.ValidationMessageFor(x=>x.Certificates,"",new { @class="text-danger"})
                    </div>
                </div>
                <div class="form-group">
                    <label for="Name" class="col-sm-4 control-label">Trade</label>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(x => x.Trade, new { @class = "form-control", @style = " width: 500px;", @cols = 30, @rows = 3 })
                        @Html.ValidationMessageFor(x => x.Trade, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="Name" class="col-sm-4 control-label">Trainees Appeared</label>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(x => x.TraineesAppeared, new { @class = "form-control", @style = " width: 500px;", @cols = 35, @rows = 5 })
                        @Html.ValidationMessageFor(x => x.TraineesAppeared, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="Name" class="col-sm-4 control-label">Trainees Passed</label>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(x => x.TraineesPassed, new { @class = "form-control", @style = " width: 500px;", @cols = 35, @rows = 5 })
                        @Html.ValidationMessageFor(x => x.TraineesPassed, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="Name" class="col-sm-4 control-label">Year Of ALTT</label>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(x => x.YearOfAlTT, new { @class = "form-control", @style = " width: 500px;", @cols = 35, @rows = 5 })
                        @Html.ValidationMessageFor(x => x.YearOfAlTT, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="Name" class="col-sm-4 control-label">Trainees Job</label>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(x => x.TraineesJob, new { @class = "form-control", @style = " width: 500px;", @cols = 35, @rows = 5 })
                        @Html.ValidationMessageFor(x => x.TraineesJob, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div> 
        <!-- /.box-body -->
             <div class="box-footer">
                  @Html.HiddenFor(x => x.ID)
                  <a href="/Admin/TraineeResult/ResultListView" class="btn btn-default">Back To List</a>
                  <button type="submit" class="btn btn-info pull-right">Save Information</button>
             </div>
        <!-- /.box-footer -->
            }
        </div>
    </div>
    <div class="col-md-6"> 
    </div>
</div> 

