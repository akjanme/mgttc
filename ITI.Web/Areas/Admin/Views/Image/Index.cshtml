@model IEnumerable<ITI.Models.ImageModel> 
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div class="content">
        <div class="col-xs-12">
            <div class="row">
                <div class="row text-right">
                    <div class="col-lg-11">

                    </div>
                    <div class="col-lg-1">
                        <a href="/admin/Image/create" class="btn btn-primary btn-lg">Create</a>
                    </div>
                </div>
                <div class="box">
                    <div class="box-body">

                        <div class="row">
                            <table class="table table-bordered">
                                <tr>
                                    <th>Image</th>
                                    <th>Name</th>
                                    <th></th>
                                    <th></th>
                                </tr>

                                @foreach (var res in Model)
                                {
                                    <tr>
                                        <td><img src="@res.ImageUrl" width="50" height="50" /></td>
                                        <td>@res.ImagDesc</td> 
                                        <td><a href="/admin/Image/create?id=@res.ID" class="update btn btn-warning btn-sm"><span class="glyphicon glyphicon-pencil"></span></a></td>
                                        <td><a href="/admin/Image/delete?id=@res.ID" class="update btn btn-warning btn-sm"><span class="glyphicon glyphicon-trash"></span></a></td>

                                    </tr>
                                }
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div> 
</body>
</html>